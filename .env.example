# Offline Private LLM-RAG System Configuration
# Copy to .env and configure for your environment

# System Settings
SYSTEM_NAME=DEFENSE_RAG_SYSTEM
ENVIRONMENT=production  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Model Paths (must be local)
EMBEDDING_MODEL_PATH=/opt/models/embeddings/all-MiniLM-L6-v2
LLM_MODEL_PATH=/opt/models/llm/llama-3.2-3b-instruct-q4.gguf

# Vector Database
VECTOR_DB_PATH=/var/lib/rag-system/vectors/
METADATA_DB_PATH=/var/lib/rag-system/metadata.db

# Encryption
ENCRYPTION_KEY_PATH=/var/lib/rag-system/keys/master.key
USE_ENCRYPTION=true

# Retrieval Settings
TOP_K_RETRIEVAL=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SIMILARITY_THRESHOLD=0.7

# LLM Inference Settings
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.1  # Low temperature for factual responses
LLM_CONTEXT_LENGTH=4096
LLM_THREADS=8

# Security
ENABLE_RBAC=true
REQUIRE_AUTHENTICATION=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/rag-system/audit.log

# Network Isolation
DISABLE_NETWORK=true
LOCALHOST_ONLY=true
API_HOST=127.0.0.1
API_PORT=8000

# Classification Levels
DEFAULT_CLASSIFICATION=UNCLASSIFIED
ENFORCE_CLASSIFICATION=true

# Performance
MAX_CONCURRENT_QUERIES=5
QUERY_TIMEOUT=30

# Data Ingestion
INGEST_PATH=/var/lib/rag-system/ingest/
SUPPORTED_FORMATS=pdf,txt,md,log,csv
