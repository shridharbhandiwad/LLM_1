# Offline Private LLM-RAG System Configuration
# Copy to .env and configure for your environment

# System Settings
SYSTEM_NAME=DEFENSE_RAG_SYSTEM
ENVIRONMENT=production  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Model Paths (must be local)
# Leave empty to use default paths (recommended)
# Or specify absolute paths for custom locations
#EMBEDDING_MODEL_PATH=
#LLM_MODEL_PATH=

# Vector Database
# Leave empty to use default paths (recommended)
#VECTOR_DB_PATH=
#METADATA_DB_PATH=

# Encryption
# Leave empty to use default path (recommended)
#ENCRYPTION_KEY_PATH=
USE_ENCRYPTION=true

# Retrieval Settings
TOP_K_RETRIEVAL=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SIMILARITY_THRESHOLD=0.7

# LLM Inference Settings
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.1  # Low temperature for factual responses
LLM_CONTEXT_LENGTH=4096
LLM_THREADS=8

# Security
ENABLE_RBAC=true
REQUIRE_AUTHENTICATION=true
ENABLE_AUDIT_LOG=true
# Leave empty to use default path (recommended)
#AUDIT_LOG_PATH=

# Network Isolation
DISABLE_NETWORK=true
LOCALHOST_ONLY=true
API_HOST=127.0.0.1
API_PORT=8000

# Classification Levels
DEFAULT_CLASSIFICATION=UNCLASSIFIED
ENFORCE_CLASSIFICATION=true

# Performance
MAX_CONCURRENT_QUERIES=5
QUERY_TIMEOUT=30

# Data Ingestion
# Leave empty to use default path (recommended)
#INGEST_PATH=
SUPPORTED_FORMATS=pdf,txt,md,log,csv
